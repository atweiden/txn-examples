# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=sample
pkgver=0.1.9
pkgrel=1
pkgdesc="Sample transactions"
arch=('any')
makedepends=('mktxn')
optdepends=('nightscape: double-entry bookkeeping TXN reporting and analysis')
groups=('nightscape' 'txn')
source=("sample.tar.gz"{,.asc})
sha256sums=('50959d019ef883fec3400df213204228352eda2e9fb7675a66efa8caaee3089b'
            'SKIP')
validpgpkeys=('DA996E276B1F51FBC492E9873DBB92CDB1B08DAB')

_dir='/var/cache/txn/pkg'

prepare() {
  cd "$srcdir/$pkgname"

  msg2 'Preparing TXNBUILD...'
  rm -f TXNBUILD
  cat >> TXNBUILD <<EOF
pkgname = '$pkgname'
pkgver = '$pkgver'
pkgrel = $pkgrel
pkgdesc = '$pkgdesc'
source = '$pkgname.txn'
EOF
}

build() {
  cd "$srcdir/$pkgname"

  msg2 'Building...'
  mktxn
}

package() {
  cd "$srcdir/$pkgname"

  msg2 'Installing...'
  install -Dm 644 "$pkgname.txn" -t "$pkgdir/usr/include/txn"
  install -Dm 644 "$pkgname-$pkgver-$pkgrel.txn.pkg.tar.xz" -t "$pkgdir/$_dir"
}
